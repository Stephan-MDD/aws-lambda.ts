{
	"name": "lambda-ts",
	"version": "1.0.0",
	"main": "build/main.js",
	"license": "MIT",
	"scripts": {
		"build": " rm -rf build && yarn tsc",
		"deploy": "yarn serverless deploy",
		"invoke:local": "yarn serverless invoke local -f",
		"invoke": "yarn serverless invoke -f"
	},
	"dependencies": {
		"serverless": "^3.14.0"
	},
	"devDependencies": {
		"@serverless/typescript": "^3.8.0",
		"@types/aws-lambda": "^8.10.93",
		"@types/node": "^17.0.24",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"esbuild": "^0.14.36",
		"eslint": "^8.13.0",
		"serverless-esbuild": "^1.26.2",
		"ts-node": "^10.7.0",
		"tsconfig-paths": "^3.14.1"
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"jest": true,
			"es2021": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"indent": [
				"error",
				"tab"
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"func-style": [
				"error",
				"declaration"
			],
			"no-console": "error",
			"eqeqeq": "error"
		}
	}
}
